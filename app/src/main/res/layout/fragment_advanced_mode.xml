<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:contentPadding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.MaterialComponents.Headline5"/>

            <RelativeLayout
                android:id="@+id/contact_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="?selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contact_selector_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_contacts_title"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@id/picker_chevron"
                    android:maxLines="1"
                    style="@style/TextAppearance.MaterialComponents.Body1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/contact_selector_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/contact_selector_title"
                    android:layout_toStartOf="@id/picker_chevron"
                    android:maxLines="1"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/picker_chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_forward" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/use_nicknames_checkbox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/use_nicknames"
                android:padding="8dp"
                android:checked="true"
                app:layout_constraintTop_toBottomOf="@id/contact_selector" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/voice_picker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/use_nicknames_checkbox">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/voice_selector_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_picker_title"
                    android:gravity="center_horizontal"
                    style="@style/TextAppearance.MaterialComponents.Body1" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/voice_picker_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/voice_speed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/speech_rate_multiplier_title"
                app:layout_constraintTop_toBottomOf="@id/voice_picker_view"
                style="@style/TextAppearance.MaterialComponents.Body1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/voice_speed_slider_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/voice_speed_slider"
                app:layout_constraintBottom_toBottomOf="@id/voice_speed_slider"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/voice_speed_reset"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_baseline_restore"
                android:background="?selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/voice_speed_slider"
                app:layout_constraintBottom_toBottomOf="@id/voice_speed_slider" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/voice_speed_slider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:max="15"
                android:progress="5"
                app:layout_constraintTop_toBottomOf="@id/voice_speed_title"
                app:layout_constraintStart_toEndOf="@id/voice_speed_slider_text"
                app:layout_constraintEnd_toStartOf="@id/voice_speed_reset" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/message_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/ringtone_message_hint"
                app:layout_constraintTop_toBottomOf="@id/voice_speed_slider">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/message_input_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ringtone_message_default" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/preview_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/preview_button_text"
                android:layout_marginEnd="4dp"
                android:enabled="false"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/message_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/generate_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/generate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                android:text="@string/generate_button_text"
                android:enabled="false"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/message_input_layout"
                app:layout_constraintStart_toEndOf="@id/preview_button"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>

