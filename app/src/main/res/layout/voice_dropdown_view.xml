<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/voice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        style="@style/TextAppearance.MaterialComponents.Body1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/voice_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice_name"
        android:layout_alignParentStart="true"
        android:text="Quality: Unknown"
        android:textColor="?android:textColorSecondary"
        style="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/voice_latency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice_quality"
        android:layout_alignParentStart="true"
        android:text="Latency: Unknown"
        android:textColor="?android:textColorSecondary"
        style="@style/TextAppearance.MaterialComponents.Subtitle1" />

</RelativeLayout>